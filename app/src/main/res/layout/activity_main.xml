

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.midi.saile_000.midiapplication.MainActivity"
    android:id="@+id/activity_main"
    android:background="#ff48548b">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/PCInput"
        android:background="#fffaffea"
        android:layout_below="@+id/PCText"
        android:layout_alignStart="@+id/MSBInput"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendMessageB"
        android:id="@+id/sendMessageButton"
        android:background="#fffaffea"
        android:hint="@string/sendMessage"
        android:layout_below="@+id/LSBInput"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bibliothek starten"
        android:id="@+id/startLibrary"
        android:background="#fffaffea"
        android:layout_toStartOf="@+id/MSBText"
        android:layout_toEndOf="@+id/MSBText"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/sendMessageButton"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textIntro"
        android:id="@+id/textViewIntro"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|top"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#e5f1f9d5"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Programm Change"
        android:id="@+id/PCText"
        android:textColor="#e5f1f9d5"
        android:layout_below="@+id/textViewIntro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MSB"
        android:id="@+id/MSBText"
        android:layout_marginTop="30dp"
        android:textColor="#e5f1f9d5"
        android:layout_below="@+id/PCInput"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/MSBInput"
        android:background="#fffaffea"
        android:layout_below="@+id/MSBText"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LSB"
        android:id="@+id/LSBText"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/MSBInput"
        android:textColor="#e5f1f9d5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/LSBInput"
        android:background="#fffaffea"
        android:layout_below="@+id/LSBText"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setlist starten"
        android:id="@+id/startSetlist"
        android:background="#fffaffea"
        android:layout_toStartOf="@+id/sendMessageButton"
        android:layout_toEndOf="@+id/MSBText"
        android:layout_below="@+id/sendMessageButton"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true" />


</RelativeLayout>
